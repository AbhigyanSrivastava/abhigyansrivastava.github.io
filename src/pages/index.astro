---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: { desc: string; href: string; title: string }[] = [];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-7">Abhigyan Srivastava</h1>
		<p class="mb-5">
			Hi👋,I am Chandler when he said,”I am sure you are right. But why?”. 
      Though I am addressed as Abhigyan. I am an engineer by education and undefined by passion. 
      This blog is my mind rambling in kilobytes. Feel free to explore.🔍
		</p>
		<SocialList />
	</section>
<div style="display: flex; justify-content: center;">
			<img
				src="train.gif"
				alt="Worrying is fatal."
			/>
		</div>
</PageLayout>
